<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:minHeight="?android:attr/listPreferredItemHeight"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/detail_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:minHeight="112dp"
            android:text="Title"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/primaryText"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/detail_movie_poster"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_below="@+id/detail_movie_title" />

        <TextView
            android:id="@+id/detail_movie_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/detail_movie_poster"
            android:layout_toRightOf="@id/detail_movie_poster"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:text="2015"
            android:textStyle="italic"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/detail_movie_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_movie_date"
            android:layout_toRightOf="@id/detail_movie_poster"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:text="8.5"
            android:textAppearance="?android:textAppearanceSmall" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_rating_star"
            android:layout_alignTop="@id/detail_movie_rating"
            android:layout_toRightOf="@id/detail_movie_rating" />

        <TextView
            android:id="@+id/detail_movie_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_movie_rating"
            android:layout_toRightOf="@id/detail_movie_poster"
            android:paddingRight="16dp"
            android:text="summary"
            android:textAppearance="?android:textAppearanceSmall" />

    </RelativeLayout>

</android.support.v7.widget.CardView>